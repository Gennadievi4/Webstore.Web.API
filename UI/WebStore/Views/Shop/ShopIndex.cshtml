@model CatalogViewModel

@{ 
    ViewData["Title"] = "Каталог товаров";
}

<section id="advertisement">
    <div class="container">
        <img src="~/images/shop/advertisement.jpg" alt="" />
    </div>
</section>

<section>
    <div class="container">
        <vc:bread-crumbs/>
        <div class="row">
            <div class="col-sm-3">
                <div class="left-sidebar">
                    <partial name="Partial/_LeftSideBar" />
                </div>
            </div>

            <div class="col-sm-9 padding-right">
                <partial name="Partial/_FeaturesItems" model="@Model.Product"/>

                <paging page-model="Model.PageViewModel"
                        page-action="ShopIndex"
                        page-url-SectionID="@Model.SectionId"
                        page-url-BrandId="@Model.BrandId"
                        page-url-PageSize="@Context.Request.Query["PageSize"]">
                </paging>
            </div>
        </div>
    </div>
</section>